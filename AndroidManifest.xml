<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.csgeeks.socialwork"
    android:versionCode="17"
    android:versionName="1.7" >

    <supports-screens />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:backupAgent="com.mfavez.android.feedgoal.storage.PrefsBackupAgentHelper"
        android:icon="@drawable/logo"
        android:label="@string/app_name" >
        <activity
            android:name="com.mfavez.android.feedgoal.SplashScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mfavez.android.feedgoal.FeedTabActivity"
            android:configChanges="orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.mfavez.android.feedgoal.FeedWebActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.mfavez.android.feedgoal.FeedItemActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.mfavez.android.feedgoal.FeedChannelsActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.mfavez.android.feedgoal.FeedPrefActivity"
            android:label="@string/pref_name" />

        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAIWgxW8j7JiJw057kQFapV4UZlsFSQrc_8p_IM-w" />
        <meta-data
            android:name="splash_screen_duration"
            android:value="2000" />
        <meta-data
            android:name="dynamic_mode"
            android:value="true" />
        <meta-data
            android:name="show_update_startup_dialog"
            android:value="true" />
        <meta-data
            android:name="GOOGLE_ANALYTICS_PROFILE_ID"
            android:value="UA-34888244-4" />

        <receiver
            android:name="com.google.android.apps.analytics.AnalyticsReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>
    </application>

</manifest>